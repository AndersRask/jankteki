{
  "manifest_version": 2,

  "name": "Jankteki",
  "description": "An enhancement suite for jinteki.net",
  "version": "0.1.2",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "page_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon48.png"
  },

  "background": {
    "scripts": [
      "background/eventPage.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://www.jinteki.net/play"
      ],
      "js": ["inline/lobby.js"],
      "css": ["inline/jankteki.css"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "http://jinteki.net/play"
  ]
}